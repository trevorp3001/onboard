<h2><%= @room.title %></h2>

<%= image_tag @room.image(:large) %>

<p><%= @room.address %></p>

<p><%= @room.latitude %></p><p><%= @room.longitude %></p>

<div class="actions">
	<%= link_to "Edit", edit_room_path(@room), class: "button" %>
	<%= link_to "Delete", room_path(@room), method: :delete, class: "button", confirm: "you sure?" %>
</div>